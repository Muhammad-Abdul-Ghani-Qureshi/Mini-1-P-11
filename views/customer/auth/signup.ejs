<%- include('../includes/head.ejs' , {pageTitle: 'Signup' })%>
</head>

<body>
  <%- include('../includes/header.ejs')%>
  <main>
    <h1>Create New Account</h1>
    <form action="" method="">
      <p>
        <label for="email">Email</label>
        <input type="email" name="email" id="email" required>
      </p>
      <p>
        <label for="confirm-email">Confirm Email</label>
        <input type="email" name="confirm-email" id="confirm-email" required>
      </p>
      <p>
        <label for="password">Password</label>
        <input type="password" name="password" id="password" required minlength="8">
      </p>
      <hr>
      <p>
        <label for="fullname">Full Name</label>
        <input type="text" name="fullname" id="fullname" required>
      </p>
      <p>
        <label for="street">Street</label>
        <input type="text" name="street" id="street" required>
      </p>
      <p>
        <label for="postal">Postal Code</label>
        <input type="text" name="postal" id="postal" minlength="5" maxlength="5" required>
      </p>
      <p>
        <label for="city">City</label>
        <input type="text" name="city" id="city" required>
      </p>
      <button class="btn">Create Account</button>
      <p><a id="switch-form" href="/login">Login Instead</a></p>
    </form>
  </main>
  <%- include('../includes/footer.ejs')%>